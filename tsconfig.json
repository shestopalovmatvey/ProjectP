{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@helpers/*": ["src/helpers/*"],
      "@shared/*": ["src/shared/*"],
      "@app/*": ["src/app/*"],
      "@assets/*": ["src/assets/*"]
    },
    "types": ["node"], 
    "esModuleInterop": true
  }
}
